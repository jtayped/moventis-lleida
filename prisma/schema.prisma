// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model Route {
    id         String @id @default(cuid())
    externalId String @unique

    name  String
    code  String
    color String

    stops Stop[]
}

model Stop {
    id         String @id @default(cuid())
    externalId String @unique

    name String

    latitude  Float
    longitude Float

    routes Route[]
}
